{
  "name": "outils-crem",
  "version": "1.0.0",
  "description": "Outils CREM - Collection d'outils pour Moodle et gestion academique",
  "scripts": {
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "serve": "npx http-server -p 8080 -c-1"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "jest-junit": "^16.0.0",
    "puppeteer": "^21.6.0",
    "@types/jest": "^29.5.11"
  },
  "jest": {
    "testEnvironment": "jsdom",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFilesAfterEnv": [
      "./tests/setup.js"
    ],
    "collectCoverageFrom": [
      "js/**/*.js"
    ],
    "moduleFileExtensions": [
      "js"
    ],
    "verbose": true
  }
}
